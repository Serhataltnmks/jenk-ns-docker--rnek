stages:
  - build
  - test
  - analyze

build:
  stage: build
  script:
    - echo 'Building the project...'

test:
  stage: test
  script:
    - echo 'Testing the project...'

analyze:
  stage: analyze
  script:
    - sonar-scanner -Dsonar.projectKey=simple-html-project \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=http://localhost:9000 \
                    -Dsonar.login=<your-sonarqube-token>
