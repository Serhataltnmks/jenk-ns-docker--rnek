pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'simple-html'
        SCANNER_HOME = tool 'SonarQube Scanner'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // GitHub'dan repository'yi klonlamak
                git credentialsId: 'github-token', url: 'https://github.com/Serhataltnmks/simple-html-project.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Docker image'ını oluşturma
                    def customImage = docker.build("${env.DOCKER_IMAGE}")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Docker container'ı farklı bir portta çalıştırma
                    docker.image("${env.DOCKER_IMAGE}").run('-d -p 8081:80')
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('My SonarQube Server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=simple-html-project \
                        -Dsonar.projectName='Simple HTML Project' \
                        -Dsonar.projectVersion=1.0 \
                        -Dsonar.sources=. \
                        -Dsonar.language=html \
                        -Dsonar.sourceEncoding=UTF-8
                    """
                }
            }
        }
        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 10, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }
    }
}
