pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'simple-html'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // GitHub'dan repository'yi klonlamak
                git credentialsId: 'github-token', url: 'https://github.com/Serhataltnmks/simple-html-project.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Docker image'ını oluşturma
                    docker.build("${env.DOCKER_IMAGE}")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Docker container'ı farklı bir portta çalıştırma
                    docker.image("${env.DOCKER_IMAGE}").run('-d -p 8081:80')
                }
            }
        }
    }
}
