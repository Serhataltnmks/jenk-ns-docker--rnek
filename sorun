pipeline {
    agent any
    environment {
        SCANNER_HOME = tool 'SonarQube Scanner'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/my-sonarqube-project.git'  // Projenizin git repo URL'si
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('My SonarQube Server') {  // Daha önce eklediğiniz SonarQube sunucu adı
                    sh '${SCANNER_HOME}/bin/sonar-scanner'
                }
            }
        }
        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 1, unit: 'HOURS') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }
    }
}
